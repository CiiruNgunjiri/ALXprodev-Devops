#!/bin/bash

# Extract values using jq
name=$(jq -r '.name' data.json | sed 's/.*/\u&/')  # Capitalize first letter
height=$(jq -r '.height' data.json)
weight=$(jq -r '.weight' data.json)
# Types is an array. Extract the first type's name and capitalize it
type=$(jq -r '.types[0].type.name' data.json | sed 's/.*/\u&/')

# Height in decimeters to meters (divide by 10)
height_meters=$(awk "BEGIN {printf \"%.1f\", $height/10}")

# Weight in hectograms to kilograms (divide by 10)
weight_kgs=$(awk "BEGIN {printf \"%d\", $weight/10}")

# Format the output exactly
echo "$name is of type $type, weighs ${weight_kgs}kg, and is ${height_meters}m tall."
