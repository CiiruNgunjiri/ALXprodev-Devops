#!/bin/bash

# Directory containing the Pokemon JSON files
input_dir="pokemon_data"

# Output CSV report file
output_file="pokemon_report.csv"

# Write CSV header
echo "Name,Height (m),Weight (kg)" > "$output_file"

# Initialize variables to accumulate totals for averaging
total_height=0
total_weight=0
count=0

# Loop over JSON files in the directory
for file in "$input_dir"/*.json; do
  # Extract name (capitalize first letter)
  name=$(jq -r '.name' "$file" | sed 's/.*/\u&/')

  # Extract height (decimeters) and convert to meters (1 dm = 0.1 m)
  height_dm=$(jq -r '.height' "$file")
  height=$(awk "BEGIN {printf \"%.1f\", $height_dm / 10}")

  # Extract weight (hectograms) and convert to kilograms (1 hg = 0.1 kg)
  weight_hg=$(jq -r '.weight' "$file")
  weight=$(awk "BEGIN {printf \"%.1f\", $weight_hg / 10}")

  # Append data to CSV
  echo "$name,$height,$weight" >> "$output_file"

  # Accumulate totals
  total_height=$(awk "BEGIN {print $total_height + $height}")
  total_weight=$(awk "BEGIN {print $total_weight + $weight}")
  count=$((count + 1))
done

# Calculate averages if count > 0
if [ "$count" -gt 0 ]; then
  avg_height=$(awk "BEGIN {printf \"%.2f\", $total_height / $count}")
  avg_weight=$(awk "BEGIN {printf \"%.2f\", $total_weight / $count}")
else
  avg_height=0
  avg_weight=0
fi

# Print results
echo -e "\nCSV Report generated at: $output_file\n"
cat "$output_file"
echo -e "\nAverage Height: $avg_height m"
echo "Average Weight: $avg_weight kg"
